<% include header.ejs %>

<body>
    <div class="container">
        <div class="row">
            <div class="col s12 m12 l12">
                <div class="card">
                    <div class="card-content">
                        <span class="card-title"> <%= data.name %> </span>
                        <p> <%= JSON.stringify(data) %> </p>
                        <div class="row">
                            <%
                                for(let key in data){
                                    if ((data.hasOwnProperty(key)) && (key != "id")){
                            %>
                                        <div class="col s12 m12 l12">
                                            <div class="card">
                                                <div class="card-content">
                                                    <span class="card-title"> <%= key %>  </span>
                                                    <a class="btn-floating halfway-fab waves-effect waves-light red"><i class="material-icons">delete</i></a>
                                                    <p>
                                                        <ul>
                                                        <%  let element = data[key];
                                                            if (element instanceof Array){
                                                                let promises = element.map((item) => {
                                                                    let url = new URL("localhost:8080/api/data");
                                                                    url.search = new URLSearchParams({
                                                                        id:element
                                                                    });
                                                                    return fetch(url).then(data => data.json());
                                                                    Promise.all(promises).then(values => {
                                                                        for (let obj of values){ %>
                                                                            <li><%= JSON.stringify(obj) %></li>
                                                                    <%
                                                                        }
                                                                    });
                                                                    %>
                                                                    <li><%= `api/data?id=${item}` %></li>
                                                                    <%
                                                                });
                                                            } %>
                                                        <%= JSON.stringify(data[key]) %>
                                                        </ul>
                                                    </p>
                                                    
                                                </div>
                                            </div>
                                        </div>

                            <%
                                    }
                                }

                            %>
                        </div>
                        
                    </div>
                    <div class="card-action">
                        <a href="#">Submit Changes</a>
                        <a href="#">Discard Changes</a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</body>